{% extends 'base.html.twig' %}

{% block title %}Budget index{% endblock %}

{% block body %}
    <h1>Budget index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for budget in budgets %}
                <tr>
                    <td>{{ budget.id }}</td>
                    <td>{{ budget.nom }}</td>
                    <td>
                        <a href="{{ path('app_budget_edit', {'id': budget.id}) }}">Modifier</a>
                        <a href="{{ path('app_budget_show', {'id': budget.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_budget_new') }}">Create new</a>
{% endblock %}
