{% extends 'base.html.twig' %}

{% block title %}Libelle index{% endblock %}

{% block body %}
    <h1>Libelle index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for libelle in libelles %}
            <tr>
                <td>{{ libelle.id }}</td>
                <td>{{ libelle.libelle }}</td>
                <td>
                    <a href="{{ path('app_libelle_show', {'id': libelle.id}) }}">show</a>
                    <a href="{{ path('app_libelle_edit', {'id': libelle.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_libelle_new') }}">Create new</a>
{% endblock %}
